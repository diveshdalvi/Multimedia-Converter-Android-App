<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include2"
        layout="@layout/top_nav" />

    <Button
        android:id="@+id/upload_text_file_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="84dp"
        android:background="@drawable/top_rect"
        android:text="Upload File To Convert Text To Uppercase"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <Button
        android:id="@+id/output_btn"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:textSize="25sp"
        android:layout_marginTop="72dp"
        android:background="@drawable/top_rect"
        android:text="Output File"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_text_file_btn"
        app:layout_constraintVertical_bias="0.091" />

</androidx.constraintlayout.widget.ConstraintLayout>